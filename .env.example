# ============================================
# UAE Digital Identity Platform â€” Environment
# ============================================
# Copy this file to .env and fill in all values.
# NEVER commit .env to version control.

# --- PostgreSQL ---
POSTGRES_DB=uae_identity
POSTGRES_USER=uae_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD
REDIS_PORT=6379

# --- Spring Boot Backend ---
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/uae_identity
SPRING_DATASOURCE_USERNAME=uae_admin
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_STRONG_PASSWORD
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# --- JWT Keystore ---
JWT_KEYSTORE_PATH=classpath:keystore/identity-keystore.p12
JWT_KEYSTORE_PASSWORD=CHANGE_ME_KEYSTORE_PASSWORD
JWT_KEY_ALIAS=identity-signing-key
JWT_KEY_PASSWORD=CHANGE_ME_KEY_PASSWORD

# --- Crypto Secrets ---
# Server pepper for PIN hashing (min 32 chars, random)
SERVER_PEPPER=CHANGE_ME_RANDOM_PEPPER_MIN_32_CHARS
# AES-256 key for PII encryption (base64-encoded 32 bytes)
AES_ENCRYPTION_KEY=CHANGE_ME_BASE64_AES_KEY
# Salt for identifier hashing
HASH_SALT=CHANGE_ME_RANDOM_SALT

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8080
FRONTEND_ORIGIN=http://localhost:3000
